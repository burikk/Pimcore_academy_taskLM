{% extends "layouts/layout.html.twig" %}

{% block content %}

    <h1>{{ pimcore_input('headline') }}</h1>
    {% for i in pimcore_block('contentblock').iterator %}
        <p>{{ pimcore_wysiwyg('content') }}</p>
        <p>Now it extends from layout</p>
        {% if editmode %}
            {{ pimcore_image('image', {
                'thumbnail': 'cars'
            }) }}
        {% else %}
            {% if not pimcore_image('image').isEmpty() %}
                <img src="{{ pimcore_image('image').getThumbnail('cars') }}" />
            {% endif %}
        {% endif %}
    {% endfor %}

{% endblock %}